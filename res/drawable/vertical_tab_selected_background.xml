<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="180"
                android:centerY="0.95"
                android:endColor="#BFC0C4"
                android:centerColor="#DCDDE1"
                android:startColor="#DCDDE1"
                android:type="linear" />
        </shape>
    </item>
    <item android:left="@dimen/vertical_tab_border_width">
        <shape android:shape="rectangle" >
            <gradient
                android:angle="90"
                android:centerY="0.95"
                android:endColor="#BFC0C4"
                android:centerColor="#DCDDE1"
                android:startColor="#DCDDE1"
                android:type="linear" />
        </shape>
    </item>
    <item android:left="@dimen/vertical_tab_border_width" android:top="@dimen/vertical_tab_border_width">
        <shape android:shape="rectangle" >
            <gradient
                android:angle="270"
                android:centerY="0.95"
                android:endColor="#BFC0C4"
                android:centerColor="#DCDDE1"
                android:startColor="#DCDDE1"
                android:type="linear" />
        </shape>
    </item>
